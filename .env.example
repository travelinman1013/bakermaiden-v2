# Database Configuration - OPTIMIZED for Production
# Primary database URL (Supabase) with connection pooling optimizations
DATABASE_URL="postgresql://username:password@host:port/database?connection_limit=15&pool_timeout=10&connect_timeout=30"

# Test database URL (separate database for testing)
TEST_DATABASE_URL="postgresql://username:password@host:port/test_database?schema=public"

# Next.js Configuration
NEXT_PUBLIC_APP_URL="https://your-app-domain.com"

# Optional: Database connection pool settings
DATABASE_CONNECTION_LIMIT=10
DATABASE_POOL_TIMEOUT=20000

# Development Settings
NODE_ENV=development
PRISMA_DISABLE_WARNINGS=true

# IMPORTANT: For Prisma CLI to work properly, you MUST create a .env file
# Copy this .env.example to .env and update with your actual values
# Prisma CLI loads from .env by default, not .env.local