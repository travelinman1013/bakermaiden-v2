{
  "name": "bakermaiden",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "ts-node --compiler-options '{\"module\":\"commonjs\"}' prisma/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:db": "jest __tests__/database",
    "test:schema": "jest __tests__/database/schema.test.ts",
    "test:traceability": "jest __tests__/database/traceability.test.ts",
    "test:performance": "jest __tests__/database/performance.test.ts",
    "test:components": "jest --config=jest.config.components.js",
    "test:components:watch": "jest --config=jest.config.components.js --watch",
    "test:components:coverage": "jest --config=jest.config.components.js --coverage",
    "db:test:setup": "dotenv -e .env.test -- npx prisma db push",
    "db:test:reset": "dotenv -e .env.test -- npx prisma migrate reset --force",
    "db:status": "npx prisma migrate status",
    "db:baseline": "npx prisma migrate resolve --applied",
    "db:validate": "npx prisma validate && npx prisma format",
    "validate:schema-api": "tsx scripts/validate-schema-consistency.ts",
    "validate:production": "npm run build && npm run validate:schema-api && npm run test:db",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@prisma/client": "^5.19.1",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@supabase/supabase-js": "^2.39.7",
    "@types/qrcode": "^1.5.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.534.0",
    "next": "^14.2.31",
    "qrcode": "^1.5.4",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.62.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.20",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "node-mocks-http": "^1.17.2",
    "postcss": "^8",
    "prisma": "^5.19.1",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "prisma": {
    "seed": "npm run db:seed"
  }
}
